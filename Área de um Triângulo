#include <iostream>
using namespace std;

int main () {
    setlocale(LC_ALL, "PORTUGUESE");
    
    float base, altura, area;
    
    cout << "Informe a base do triângulo (cm): ";
    cin >> base;
    
    cout << "Informe a altura do triângulo (cm): ";
    cin >> altura;
    
    area = (base * altura)/2;
    
    cout << "A base do triângulo é " << base << " a altura é " << altura << " e a área é " << area << " cm²." << endl;
    
    return 0;
}
